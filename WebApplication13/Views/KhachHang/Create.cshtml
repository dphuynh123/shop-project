@model WebApplication13.Models.KhachHang

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Layout/_LayoutUser.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-primary card-header-primary">
                    <h4 class="card-title" style="font-size:30px">Thêm Khách Hàng</h4>
                </div>
                <div class="card-body">
                    <div class="form-horizontal mt-3">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group; mt-1">
                            <label style="font-size:18px" class="col-md-5"> Tên Khách Hàng</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.TenKH, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TenKH, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group; mt-1">
                            <label style="font-size:18px" class="col-md-5"> Địa Chỉ</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group; mt-1">
                            <label style="font-size:18px" class="col-md-5"> Ngày Sinh</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group; mt-1">
                            <label style="font-size:18px" class="col-md-5">Số Điện Thoại</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.SoDT, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.SoDT, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group; mt-5">
                        <div class="col-md-offset-2 col-md-10">
                            <a class="btn btn-primary" href="@Url.Action("Index", "KhachHang")">Trở Về</a>
                            <input type="submit" value="Xác Nhận" class="btn btn-primary ; float-right" />
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    

}

