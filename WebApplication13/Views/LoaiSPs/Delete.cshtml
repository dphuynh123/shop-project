
@model WebApplication13.Models.LoaiSP
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Layout/_LayoutAdminNew.cshtml";
}
<div class="container-fluid">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-icon card-header-info">
                        <div class="card-icon">
                            <div style="font-size:35px" class="font-weight-bolder">
                                <i class="material-icons">add_circle_outline</i>
                                Nhà Cung Cấp
                            </div>
                            <div class="ripple-container"></div>
                        </div>
                    </div>
                    <div class="form-horizontal">
                        <div class="card-body">

                            <div style="font-size:18px" class="col-md-10 ml-auto mr-5">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="row mt-1">
                                    <label class="col-sm-2 col-form-label"> Tên Nhà C.Cấp :</label>
                                    <div class="col-sm-7">
                                        <div class="form-group bmd-form-group">
                                            @Html.DisplayFor(model => model.TenLoai, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-1">
                                    <label class="col-sm-2 col-form-label"> Địa Chỉ :</label>
                                    <div class="col-sm-7">
                                        <div class="form-group bmd-form-group">
                                            @Html.DisplayFor(model => model.ChuThich, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="form-group mt-4">
                                    <div class="col-md-offset-2 col-md-10 mt-5 mb-5">
                                        <a class="btn btn-outline-danger btn-lg float-left" href="@Url.Action("Index","LoaiSPs")"> Trở Về</a>
                                        @using (Html.BeginForm())
                                        {
                                            @Html.AntiForgeryToken()

                                            <div class="form-actions no-color">
                                                <input type="submit" value="Xác Nhận Xoá" class="btn btn-outline-danger btn-lg float-right" />
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>