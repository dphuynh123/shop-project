@model WebApplication13.Models.RegisterViewModel
@{
    Layout = "~/Views/Layout/_LayoutAdminNew.cshtml";

}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form id="RangeValidation" class="form-horizontal" action="" method="" novalidate="novalidate">
                    <div class="card ">
                        <div class="card-header card-header-icon card-header-info">
                            <div class="card-icon">
                                <div style="font-size:40px" class="font-weight-bolder">
                                    Thêm Tài Khoản
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div style="font-size:18px" class="col-md-10 ml-auto mr-5">
                                @Html.ValidationSummary("", new { @class = "text-danger" })
                                <div class="text-success">
                                    <p>
                                        @ViewBag.Message
                                    </p>
                                </div>
                                <div class="row mt-3">
                                    <label class="col-sm-3 col-form-label">FirstName :</label>
                                    <div class="col-sm-7">
                                        <div class="form-group bmd-form-group">
                                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", required = "true" })
                                        </div>
                                    </div>
                                </div>

                                <div class="row mt-3">
                                    <label class="col-sm-3 col-form-label">LastName :</label>
                                    <div class="col-sm-7">
                                        <div class="form-group bmd-form-group">
                                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", required = "true" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <label class="col-sm-3 col-form-label" style="color:black"> <b>Email :</b></label>
                                    <div class="col-sm-7">
                                        <div class="form-group bmd-form-group">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", email = "true", required = "true" })
                                        </div>
                                    </div>

                                </div>
                                <div class="row mt-3">
                                    <label class="col-sm-3 col-form-label" style="color:black"> <b>Password :</b></label>
                                    <div class="col-sm-7">
                                        <div class="form-group bmd-form-group">
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "true" })
                                        </div>
                                    </div>
                                </div>

                                <div class="row mt-3">
                                    <label class="col-sm-3 col-form-label" style="color:black"><b>ConfirmPassword :</b></label>
                                    <div class="col-sm-7">
                                        <div class="form-group bmd-form-group">
                                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", required = "true" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-3">

                                    <label class="col-sm-3 col-form-label">Cửa hàng :</label>
                                    <div class="col-sm-3">
                                        <div class="form-group bmd-form-group">
                                            @Html.DropDownList("CuaHangId", null, htmlAttributes: new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group mt-4">
                                    <div class="col-md-offset-2 col-md-10 mt-5 mb-5">
                                        <input type="submit" value="Xác Nhận" class="btn btn-outline-danger btn-lg float-right" />
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
}


